            </div>
            <div class="form-group">
            <label asp-for="Doughnuts.Flavours" class="control-label"></label>
            <input asp-for="Doughnuts.Flavours" class="form-control" />
            <span asp-validation-for="Doughnuts.Flavours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doughnuts.Price" class="control-label"></label>
        <input asp-for="Doughnuts.Price" class="form-control" />
        <span asp-validation-for="Doughnuts.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    </form>
</div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

