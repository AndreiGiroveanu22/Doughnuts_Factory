@page
@model DoughnutsFactory.Pages.Doughnuts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doughnuts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Doughnuts.ID" />
            <div class="form-group">
                <label asp-for="Doughnuts.Type" class="control-label"></label>
                <input asp-for="Doughnuts.Type" class="form-control" />
